<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    tools:context=".books.views.BooksActivity"
    >

  <ImageView
      android:id="@+id/bookCoverThumbnailImageView"
      android:layout_width="@dimen/book_cover_thumbnail_size"
      android:layout_height="@dimen/book_cover_thumbnail_size"
      android:layout_marginEnd="16dp"
      android:contentDescription="@string/book_cover_thumbnail_image_content_description"
      tools:src="@drawable/ic_book"
      />

  <TextView
      android:id="@+id/bookTitleTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="?attr/textAppearanceListItem"
      tools:text="This is the book title"
      />

</LinearLayout>
